<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/shadColor"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/shadColor"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            android:background="@color/shadColor">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_id"
                android:gravity="center_vertical|start"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="#111111"
                android:fontFamily="cursive"
                android:textColor="@color/finalColor"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_status"
                android:gravity="center_vertical|start"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                android:fontFamily="cursive"
                android:textColor="@color/finalColor"

                android:text="status"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_phone"
                android:gravity="center_vertical|start"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"

                android:fontFamily="cursive"
                android:textColor="@color/finalColor"
                android:text="123456789"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_adress"
                android:gravity="center_vertical|start"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"

                android:fontFamily="cursive"
                android:textColor="@color/finalColor"
                android:text="address"></TextView>
        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hey"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="289dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/log" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        >


    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnConnecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="cursive"
        android:text="Se connecter"
        android:textColor="@color/shadColor"

        app:cornerRadius="20dp"
        app:fButtonColor="@color/finalColor"
        app:shadowColor="@color/shadColor"
        app:shadowEnabled="true"
        app:shadowHeight="6dp"></info.hoang8f.widget.FButton>


</RelativeLayout>